{
  "compilerOptions": {
    "paths": {
      "payload/generated-types": ["./src/payload-types.ts"]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "downlevelIteration": true,
    "allowJs": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react",
  },
  "include": [
    "src",
    "src/payload.config.ts",
    "src/scripts/migrateVersions.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
  ],
  "ts-node": {
    "transpileOnly": true
  }
}
